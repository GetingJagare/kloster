upstream backend {
    server 127.0.0.1:8000;
}

server {
        listen 80;
        server_name <domain>;
        root <root_dir>;

        # Add index.php to the list if you are using PHP
        index index.html index.htm index.nginx-debian.html;

        location / {
                try_files $uri $uri/ =404;
        }

        location /mail {
                proxy_pass http://backend;
        }
}
